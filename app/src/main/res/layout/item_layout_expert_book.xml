<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llIteme"
    android:background="@color/theme_bg"
    android:orientation="vertical"
    android:padding="@dimen/len_10">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_60"
        android:background="#0B1435"
        android:gravity="center_vertical"
        android:text="专家资料"
        android:textColor="@color/white"
        android:textSize="@dimen/font_22" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="@dimen/len_50"
            android:layout_height="@dimen/len_50"
            android:background="@drawable/icon_file" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专家资料安全知识库专家资料安全知识库 "
                android:textColor="@color/white"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/tvBookTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_10"
                android:text="2019-12-22"
                android:textColor="@color/white_alpha_224" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>